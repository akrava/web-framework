<p class="first">Розрахунок терміну доставки</p>
<form id="estimate" action="{{uri_estimate}}" method="POST">
    <div class="wrapper table">
        <table class="data">
            <tr class="estimate row">
                <td class="name">Дата відправлення</td>
                <td class="value">
                    <input required type="date" id="departure_date" name="departure_date">
                </td>
            </tr>
            <tr class="estimate row">
                <td class="name">Місто відправник</td>
                <td class="value">
                    <select id="departure_city" required name="departure_city">
                        {{#cities}}
                        <option value="{{id}}">{{name}}</option>
                        {{/cities}}
                    </select>
                </td>
            </tr>
            <tr class="estimate row">
                <td class="name">Місто одержувач</td>
                <td class="value">
                    <select id="arrive" required name="arrive">
                        {{#cities}}
                        <option value="{{id}}">{{name}}</option>
                        {{/cities}}
                    </select>
                </td>
            </tr>
        </table>
        <div class="send-table">
            <input type="submit" value="Розрахувати дату">
            <input type="reset" value="Очистити">
        </div>
    </div>
</form>